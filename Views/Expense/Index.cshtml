
@model IEnumerable<ExpenseEntity>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3"   >

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary ">View Expenses</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New</a>

        </div>
    </div>
    <br />
 </div>
     
<div style="overflow-x:auto">
<table class="table table-bordered table-responsive table-striped table table-hover"   > 
    
    <thead>
        <tr class="table-active ">

            <th >
                Category
            </th>
            
            <th >
                Description
            </th>
            
            <th>
                Amount
            </th>
             <th>
                Date Created
            </th>
            
            
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.ExpenseCategory.ExpenseCategoryName
                </td>
                <td width="15%">
                    @obj.Description
                </td>
               
                 <td width="15%">
                    @obj.Amount
                 </td>
                 <td width="15%">
                    @obj.Createdate.ToShortDateString()
                 </td>
                
                 
                <td width="13%">
                   
                    <div class="w-60 btn-group" >
                    <a asp-action="Edit" asp-controller="Expense" asp-route-id="@obj.Id"
                    class="btn btn-primary mx-3"><i class="bi bi-pencil-square"></i>Edit</a>
                   
                    <a asp-action="Delete" asp-controller="Expense" asp-route-id="@obj.Id"
                    class="btn btn-danger mx-3" ><i class="bi bi-trash-fill"></i>Delete</a>

                    </div>
                   

                </td>
            </tr>
        }
    </tbody>
</table>
 </div>
 </>