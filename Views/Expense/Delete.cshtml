@model ExpenseEntity

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3"> 
            <div>
            <label asp-for="ExpenseCategoryId"></label>
            <select asp-items="@ViewBag.PopulateExpCategory" asp-for="ExpenseCategoryId"  disabled class="form-control  form-select" >
                <option >
                    --Select Expense Category
                </option>
            </select>
            <span asp-validation-for="ExpenseCategoryId" class="text-danger"></span>
            </div>
        </div>
        

         <div class="mb-3"> 
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Createdate"></label>
            <input asp-for="Createdate" disabled class="form-control" />
            <span asp-validation-for="Createdate" class="text-danger"></span>
        </div>
            
        
         <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" disabled class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        <button type="submit" class="btn btn-danger " style="width:150px ">Delete</button>
        <a asp-controller="expense" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

